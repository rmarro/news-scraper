<div class="container">
    <div class="jumbotron">
        <h1>Get GitHub News</h1>
        <p>Saved Articles</p>
        <p>
            <a class="btn btn-primary btn-lg saved-btn" role="button" href="/">Home</a>
        </p>
        
    </div>
</div>

{{!-- Render each saved article --}}
<div class="container">
    {{#each article}}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <a target="_blank" href={{this.link}}><h3 class="panel-title">{{this.title}}</h3></a>
                </div>
                <div class="panel-body">
                    {{this.summary}}
                <button type="button" class="btn btn-default pull-right unsave-article" data-id={{id}}>Unsave Article</button>
                <div>
                    <a type="button" class="btn btn-default view-comments" data-id={{id}} href="/articles/{{id}}">Go to comments</a>
                </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}   
</div>